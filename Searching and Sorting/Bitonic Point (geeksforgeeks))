class Solution{
public:
	
	int findMaximum(int arr[], int n) {
	    // code here
	    int beg=0, end=n-1;
	    
	    while(beg<=end){
	        
	        int mid=beg+ (end-beg)/2;
	        
	        if(arr[mid]>arr[mid-1] and arr[mid]>arr[mid+1])
	        return arr[mid];
	        else if (arr[mid]>arr[mid+1])
	        end=mid-1;
	        else if(arr[mid]<arr[mid+1])
	        beg=mid+1;
	    }
	}
};
